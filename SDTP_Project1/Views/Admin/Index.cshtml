@model IEnumerable<SDTP_Project1.Models.Sensor>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="p-4 bg-[#d1fae5] text-green-800 rounded-md">
        @TempData["SuccessMessage"]
    </div>
}


<div class="container-fluid mt-4">
    @* Dashboard Info Sector *@
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card bg-gradient-custom text-white shadow-lg h-100 ">
                <div class="card-body">
                    <h5 class="card-title ">Total Sensors</h5>
                    <p class="card-text fs-3 fw-bold">@(Model.Count())</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-gradient-custom text-white shadow-lg h-100 ">
                <div class="card-body">
                    <h5 class="card-title">Average Air Quality</h5>
                    <p class="card-text fs-3 fw-bold">XX ppm</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-gradient-custom text-white shadow-lg h-100 ">
                <div class="card-body">
                    <h5 class="card-title">Deactivated Sensors</h5>
                    <p id="deactivatedCount" class="card-text fs-3 fw-bold">@(Model.Count(s => !s.IsActive))</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end  mt-4">
        <a class="btn btn-primary me-2" href="@Url.Action("CreateSensor", "Admin")">Add New Sensor</a>
        <button class="btn btn-info" id="openThresholdSettings">Alert Threshold Settings</button>
    </div>

    <div class="mt-4 overflow-auto" style="max-height: 60vh;">
        <div class="row g-3">
            @foreach (var sensor in Model)
            {
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="row g-3 flex-grow-1">
                                <div class="col-md-3">
                                    <h6 class="fw-semibold">Sensor ID</h6>
                                    <p class="text-secondary">@sensor.SensorID</p>
                                </div>
                                <div class="col-md-3">
                                    <h6 class="fw-semibold">City</h6>
                                    <p class="text-secondary">@sensor.City</p>
                                </div>
                                <div class="col-md-3">
                                    <h6 class="fw-semibold">Coordinates</h6>
                                    <p class="text-secondary">@sensor.Latitude, @sensor.Longitude</p>
                                </div>
                                <div class="col-md-3">
                                    <h6 class="fw-semibold">Status</h6>
                                    <span id="status-@sensor.SensorID" class="badge @(sensor.IsActive ? "bg-success" : "bg-danger")">
                                        @(sensor.IsActive ? "Active" : "Inactive")
                                    </span>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button class="edit-btn btn btn-warning btn-sm" data-id="@sensor.SensorID">Edit</button>

                                <button class="btn btn-secondary btn-sm sensor-toggle"
                                        data-id="@sensor.SensorID"
                                        data-isactive="@sensor.IsActive">
                                    @(sensor.IsActive ? "Disable" : "Enable")
                                </button>


                                <button class="btn btn-danger btn-sm" onclick="confirmDelete('@sensor.SensorID')">Delete</button>
                            </div>


                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="editSensorModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Sensor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editSensorContent">
            </div>
        </div>
    </div>
</div>

@* container for the alertThresholdSettingsModal window *@
<div id="alertThresholdSettingsModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="alertThresholdSettingsContent">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            // Open modal with form content
            $(".edit-btn").click(function(){
                var sensorId = $(this).data("id");
                $.get('@Url.Action("EditSensor", "Admin")', { id: sensorId }, function(data){
                    $("#editSensorContent").html(data);
                    $("#editSensorModal").modal('show');
                }).fail(function(xhr){
                    console.error("Error loading sensor form:", xhr.responseText);
                });
            });

            // Delegate submit event for the dynamically loaded form
            $(document).on("submit", "#editSensorContent form", function(e) {
                e.preventDefault(); // Prevent normal form submission
                console.log("Form submit intercepted.", e);

                var form = $(this);
                console.log("Form action attribute:", form.attr("action"));
                console.log("Serialized form data:", form.serialize());

                // Log before AJAX call
                console.log("AJAX call is about to be made.");

                $.ajax({
                    url: form.attr("action"),
                    type: "POST",
                    data: form.serialize(),
                    success: function(response) {
                        console.log("AJAX call succeeded.", response);
                        if (response.success) {
                            $("#editSensorModal").modal('hide'); // Close modal on success
                            location.reload(); // Reload page to show updated data
                        } else {
                            // Assume response is HTML (partial view with errors)
                            $("#editSensorContent").html(response);
                        }
                    },
                    error: function(xhr) {
                        console.error("Error updating sensor:", xhr.responseText);
                    }
                });
            });
        });

        $("#openThresholdSettings").click(function(){
            $.get('@Url.Action("AlertThresholdSettings", "Admin")', function(data){
                $("#alertThresholdSettingsContent").html(data);
                $("#alertThresholdSettingsModal").modal('show');
            }).fail(function(xhr){
                console.error("Error loading alert threshold settings:", xhr.responseText);
            });
        });
    </script>

}

