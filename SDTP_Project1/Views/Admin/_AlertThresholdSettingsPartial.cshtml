@model IEnumerable<SDTP_Project1.Models.AlertThresholdSetting>

<div class="modal-header">
    <h5 class="modal-title">Alert Threshold Settings</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <form id="alertThresholdSettingsForm"
          asp-action="UpdateAlertThresholds"
          asp-controller="Admin"
          method="post">
        @Html.AntiForgeryToken()   <!-- ★ CSRF token added -->
        @if (Model != null && Model.Any())
        {
            @foreach (var setting in Model)
            {
                <div class="mb-3 threshold-setting" data-parameter="@setting.Parameter">
                    <label class="form-label">
                        Threshold Value for @setting.Parameter
                    </label>
                    <input type="number"
                           class="form-control threshold-value"
                           asp-for="@setting.ThresholdValue" />
                    <span asp-validation-for="@setting.ThresholdValue"
                          class="text-danger"></span>

                    <div class="form-check mt-2">
                        <input type="checkbox"
                               class="form-check-input threshold-active"
                               asp-for="@setting.IsActive" />
                        <label class="form-check-label">
                            Enable Alerts for @setting.Parameter
                        </label>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No alert threshold settings found.</p>
        }

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary"
            data-bs-dismiss="modal">
        Close
    </button>
</div>
