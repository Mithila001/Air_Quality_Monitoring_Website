@model IEnumerable<SDTP_Project1.Models.AdminUser>

<partial name="_addNewAdmin" model="new SDTP_Project1.Models.AdminUser()" />

@{
    ViewData["Title"] = "System Admin";
}



<h1 class="mb-4">System Administration</h1>

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12 mb-4">
            <div class="row">

                <!-- Total User Accounts -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-body text-center">
                            <p class="h1 mb-0" style="font-weight:bold;font-size:2.5rem;">
                                @ViewBag.TotalUserAccounts
                            </p>
                            <h5 class="text-muted">Total User Accounts</h5>
                        </div>
                    </div>
                </div>

                <!-- Total User Admins -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-body text-center">
                            <p class="h1 mb-0" style="font-weight:bold;font-size:2.5rem;">
                                @ViewBag.TotalUserAdmins
                            </p>
                            <h5 class="text-muted">Total User Admins</h5>
                        </div>
                    </div>
                </div>

                <!-- Total System Admins -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-body text-center">
                            <p class="h1 mb-0" style="font-weight:bold;font-size:2.5rem;">
                                @ViewBag.TotalSystemAdmins
                            </p>
                            <h5 class="text-muted">Total System Admins</h5>
                        </div>
                    </div>
                </div>

                <!-- Total Active Admins -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-body text-center">
                            <p class="h1 mb-0" style="font-weight:bold;font-size:2.5rem;">
                                @ViewBag.TotalActiveAdmins
                            </p>
                            <h5 class="text-muted">Total Active Admins</h5>
                        </div>
                    </div>
                </div>

                <!-- Total Deactive Admins -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-body text-center">
                            <p class="h1 mb-0" style="font-weight:bold;font-size:2.5rem;">
                                @ViewBag.TotalDeactiveAdmins
                            </p>
                            <h5 class="text-muted">Total Deactive Admins</h5>
                        </div>
                    </div>
                </div>

                <!-- Total Active Sensors -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-body text-center">
                            <p class="h1 mb-0" style="font-weight:bold;font-size:2.5rem;">
                                @ViewBag.TotalActiveSensors
                            </p>
                            <h5 class="text-muted">Total Active Sensors</h5>
                        </div>
                    </div>
                </div>

                <!-- Total Deactivated Sensors -->
                <div class="col-md-4 mb-3">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-body text-center">
                            <p class="h1 mb-0" style="font-weight:bold;font-size:2.5rem;">
                                @ViewBag.TotalDeactivatedSensors
                            </p>
                            <h5 class="text-muted">Total Deactivated Sensors</h5>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



<div class="container-fluid px-4">
    <hr class="my-4">
    <div class="w-100 d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 ms-3">Admin Users</h2>
        <button class="btn btn-primary rounded-pill btn-lg me-3" data-bs-toggle="modal" data-bs-target="#addAdminModal">
            <i class="bi bi-person-plus-fill me-2"></i> Register an Admin
        </button>
    </div>
    <hr class="my-4">

    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-12 mb-4">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">
                        <div class="row g-3 align-items-center">

                            <div class="col-lg-3 col-md-6 text-md-start text-center">
                                <h5 class="mb-1 text-primary">@user.Name</h5>
                                <small class="text-muted">ID: @user.Id</small>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <p class="mb-0 text-break">
                                    <strong>Gender:</strong> @user.Gender<br />
                                    <strong>Age:</strong> @user.Age<br />
                                    <strong>Role:</strong> @user.UserRole
                                </p>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <p class="mb-0 text-break">
                                    <strong>Registered:</strong> @user.RegisterDate.ToShortDateString()<br />
                                    <strong>Email:</strong> @user.Email<br />
                                    <strong>Phone:</strong> @user.PhoneNumber
                                </p>
                            </div>

                            <div class="col-lg-1 col-md-3 col-sm-6 text-md-start text-center">
                                <p class="mb-0">
                                    <strong>Status:</strong><br />
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </p>
                            </div>

                            <div class="col-lg-2 col-md-3 col-sm-6 text-end d-flex justify-content-center">
                                <div class="btn-group" style="width: 80%;">
                                    <button type="button"
                                            class="btn btn-outline-primary rounded-pill btn-md d-flex justify-content-center align-items-center"
                                            style=" height: 100%;" data-bs-toggle="modal"
                                            data-bs-target="#editAdminModal-@user.Id">
                                        <i class="bi bi-pencil-square me-2"></i> Edit
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("_EditAdminUserModal", user)
        }
    </div>
</div>
