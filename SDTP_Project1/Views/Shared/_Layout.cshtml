<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Air Quality Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Reference our custom CSS -->
    <link rel="stylesheet" href="~/css/home.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="custom-header">
        <div class="header-left">
            <img src="~/images/icon2.jpg" alt="Dashboard Icon" class="header-icon" />
            <button type="button" class="btn ranking-btn">See Full Rankings</button>
            <div class="input-group search-group">
                <input type="text" class="search-bar" placeholder="Search..." />
                <button class="btn search-btn" type="button">🔍</button>
            </div>
        </div>
        <div class="header-right">
            <button type="button" class="btn contribute-btn">Contribute</button>
            <img src="~/images/profile.png" alt="User Icon" class="user-icon" />
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <!-- Optional footer content -->
    </footer>

    <!-- JS libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
