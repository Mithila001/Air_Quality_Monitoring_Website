<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Air Quality Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Reference our custom CSS -->
    <link rel="stylesheet" href="~/css/app.css"/>
    @* <link rel="stylesheet" href="~/css/app.css"/> *@
    @* <link rel="stylesheet" href="~/css/app.css"/> *@
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Styles", required: false)
</head>
<body class="bg-gray-100">
    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <div>
                <a class="text-xl font-bold text-gray-800" href="@Url.Action("Index", "Home")">Home</a>
                <a class="ml-6 text-xl font-bold text-gray-800" href="@Url.Action("Index", "Admin")">Admin</a>
            </div>
        </div>
    </header>

    <main class="container mx-auto p-4">
        @RenderBody()
    </main>

    <footer class="bg-white border-t mt-8">
        <div class="max-w-7xl mx-auto px-4 py-4 text-center text-gray-600">
            &copy; @DateTime.Now.Year - SDTP_Project1
        </div>
    </footer>

    <script src="~/js/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
