                        @*         <svg xmlns="http://www.w3.org/2000/svg" class="me-2" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor"> *@
                        @*             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354l-2 2m0 0l-2-2m2 2l2 2m-2-2l-2-2m2 2l2 2m-2-2l-2-2M12 15.646l-2-2m0 0l-2 2m2-2l2-2m-2 2l2 2m-2-2l2-2m-2-2v-2a2 2 0 012-2h6a2 2 0 012 2v2h.01l.01-.01c1.032.072 2.03.695 2.953 1.727A12 12 0 0012 15.646z" /> *@
                        @*         </svg> *@
                        @*         System Admin *@
                        @*     </a> *@
                        @* </li> *@
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Auth")">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
                @await Html.PartialAsync("_DevToolsPartial")
            </div>
        </nav>
    </header>

    <main class="flex-grow-1 w-100">
        @RenderBody()
    </main>

    <footer class="bg-custom-dark text-custom-gray mt-auto">
        <div class="container py-3">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="text-center text-md-start mb-3 mb-md-0">
                    <p>&copy; @DateTime.Now.Year - Air Quality Monitoring System</p>
                    <p class="small mt-1">Real-time environmental data for informed decisions</p>
                </div>
                <div class="d-flex gap-3">
                    <a href="#" class="text-custom-gray text-decoration-none">
