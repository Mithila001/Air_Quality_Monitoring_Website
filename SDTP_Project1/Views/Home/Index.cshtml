@model IEnumerable<SDTP_Project1.Models.AirQualityData>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <!-- Left Column: Cards container -->
    <div class="cards-container">
        @foreach (var data in Model)
        {
            <div class="card">
                <h5>@data.District</h5>
                <p><strong>AQI:</strong> @data.AQI</p>
                <p><strong>Time:</strong> @data.Timestamp.ToString("g")</p>
                <p><strong>PM2.5:</strong> @data.PM2_5</p>
                <p><strong>PM10:</strong> @data.PM10</p>
                <!-- Add additional fields if needed -->
            </div>
        }
    </div>

    <!-- Right Column: Map -->
    <div id="map"></div>
</div>

@section Scripts {
    <!-- Load Leaflet CSS and JS from CDN -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <!-- Reference external home.js for map initialization -->
    <script src="~/js/home.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var locations = @Html.Raw(Json.Serialize(Model));
            initMap(locations);
        });
    </script>
}
